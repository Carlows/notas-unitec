@model control_notas_cit.Models.ViewModels.EditarAlumnoViewModel

@{
    ViewBag.Title = "EditarAlumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section sidebar{
    @Html.Partial("_SidebarProfesorPartialView")
}


<div class="box span8">
    <div class="box-header" data-original-title="">
        <h2><i class="halflings-icon edit"></i><span class="break"></span> Editar alumno.</h2>
    </div>
    <div class="box-content">
        <fieldset>
            @using (Html.BeginForm("EditarAlumno", "Profesor", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(model => model.alumnoID)

                <div class="container-fluid">
                    @Html.ValidationSummary(true)
                </div>
                
                <div class="control-group">
                    @Html.LabelFor(model => model.CelulaID, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownListFor(model => model.CelulaID, Model.Celulas, "Elige una celula")
                        @Html.ValidationMessageFor(model => model.CelulaID)
                    </div>

                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Aceptar</button>
                    @Html.ActionLink("Cancelar", "ListaAlumnos", null, new { @class = "btn" })
                </div>
            }
        </fieldset>
    </div>
</div>





