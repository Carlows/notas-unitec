@model control_notas_cit.Models.Entidades.Celula
@using control_notas_cit.Helpers
<div class="box-header">
    <h2>@Html.TruncateText(@Model.Nombre, 50)</h2>

</div>

<div class="box-content">
    <h3>@Model.Nombre</h3>

    <div class="container-fluid">
        <pre>@Model.Descripcion</pre>
    </div>

    <div class="clearfix">
        @Html.ActionLink("Editar", "EditarCelula", "Profesor", new { id = @Model.CelulaID }, new { @class = "btn btn-primary pull-right" })
        @Html.ActionLink("Ver Minutas", "MinutasCelula", "Profesor", new { id = @Model.CelulaID }, new { @class = "btn btn-primary pull-right", style = "margin-right: 8px" })
    </div>
</div>