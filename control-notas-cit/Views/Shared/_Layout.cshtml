<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - Centro de Innovación Tecnológica</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/style-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/googlefont.css")" rel='stylesheet' type='text/css'>

    <link rel="shortcut icon" href="img/favicon.ico">
    <style>
        pre {
            border: none;
            font-size: 14px;
            margin: 1em 0px;
            text-align:justify;
            word-break:inherit;
        }
    </style>

    @RenderSection("styles", required: false)
</head>

<body>
    <!-- start: Header -->
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#"><span>Proyectos</span></a>

                <!-- start: Header Menu -->
                <div class="nav-no-collapse header-nav">
                    <ul class="nav pull-right">
                        <!-- start: User Dropdown -->
                        <li class="dropdown">
                            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="halflings-icon white user"></i> @User.Identity.Name
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-menu-title">
                                    <span>Configuración</span>
                                </li>
                                <li><a href="@Url.Action("ChangePassword", "Account")"><i class="halflings-icon edit"></i> Cambiar contraseña</a></li>
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", style = "margin: 0px;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="halflings-icon off"></i> Salir</a></li>
                                }
                            </ul>
                        </li>
                        <!-- end: User Dropdown -->
                    </ul>
                </div>
                <!-- end: Header Menu -->

            </div>
        </div>
    </div>

    <!-- start: Header -->

    <div class="container-fluid-full">
        <div class="row-fluid">

            <!-- start: Main Menu -->
            <div id="sidebar-left" class="span2">
                <div class="nav-collapse sidebar-nav">
                    <ul class="nav nav-tabs nav-stacked main-menu">
                        @RenderSection("sidebar")
                    </ul>
                </div>
            </div>
            <!-- end: Main Menu -->
            <!-- start: Content -->
            <div id="content" class="span10">
                @RenderBody()
            </div>

        </div>
    </div>
    <div class="footer">
        <footer>
            <p>
                <span style="text-align:left;float:left"><a href="#">Centro de Innovación Tecnológica</a></span>
            </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Content/js/jquery-migrate-1.0.0.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery-ui-1.10.0.custom.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.ui.touch-punch.js")"></script>
    <script src="@Url.Content("~/Content/js/modernizr.js")"></script>
    <script src="@Url.Content("~/Content/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.cookie.js")"></script>
    <script src="@Url.Content("~/Content/js/fullcalendar.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Content/js/excanvas.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.flot.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.flot.pie.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.flot.stack.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.flot.resize.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.chosen.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.uniform.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.cleditor.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.noty.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.elfinder.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.raty.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.iphone.toggle.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.uploadify-3.1.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.gritter.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.imagesloaded.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.masonry.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.knob.modified.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.sparkline.min.js")"></script>
    <script src="@Url.Content("~/Content/js/counter.js")"></script>
    <script src="@Url.Content("~/Content/js/retina.js")"></script>
    <script src="@Url.Content("~/Content/js/custom/custom.js")"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
