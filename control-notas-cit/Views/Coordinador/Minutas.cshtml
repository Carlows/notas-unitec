@model IList<control_notas_cit.Models.Entidades.Minuta>
@using control_notas_cit.Models.Entidades
@using control_notas_cit.Helpers
@{
    ViewBag.Title = "Minutas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section sidebar{
    @Html.Partial("_SidebarCoordinadorPartialView")
}

<!--- La lógica que tiene la vista es para dividir los proyectos de 2 en 2 sin perder el layout --->
@if (Model.Count <= 0)
{
    <div class="alert alert-error">
        <h2>Oops, al parecer aún no se ha subido ninguna minuta.</h2>
    </div>  
}
else
{
    <div class="row-fluid">
        @{
            int counter = 0;

            foreach (Minuta m in @Model)
            {

                @Html.GridBoxesOpen(counter)

                <div class="box span6">
                    @Html.Partial("_MinutaPartialView", m)
                </div>
            
                @Html.GridBoxesClose(counter, @Model.Count)

                counter++;
            }

        }
    </div>
}


