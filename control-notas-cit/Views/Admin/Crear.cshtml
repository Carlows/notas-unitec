@using control_notas_cit.Helpers
@using control_notas_cit.Models.Entidades
@model control_notas_cit.Models.ViewModels.ProjectViewModel
@{
    ViewBag.Title = "Crear nuevo proyecto";
    ViewBag.Seccion = "Administrador global";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section sidebar{
    @Html.Partial("_SidebarPartialView")
}

<div class="box span8">
    <div class="box-header" data-original-title="">
        <h2><i class="halflings-icon edit"></i><span class="break"></span> Crear nuevo proyecto.</h2>       
    </div>
    <div class="box-content">
        <fieldset>
            @using (Html.BeginForm("Crear", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)

                <div class="control-group">
                    @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Nombre)
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>

                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextAreaFor(model => model.Descripcion, new { rows = 5, cols = 8 })
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>

                </div>
                
                <div class="control-group">
                    @Html.LabelFor(model => model.Profesores, new { @class = "control-label" })
                    <div class="controls">
                        @if(@Model.Profesores.Count() == 0)
                        {
                            <label>Primero debes agregar un profesor.</label>
                        }
                        else
                        {
                            @Html.DropDownListFor(model => model.ProfesorEmail, Model.Profesores, "Elige un profesor")
                        }
                    </div>

                    @Html.ValidationMessageFor(model => model.Profesores)
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Crear</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn" })
                </div>
            }
        </fieldset>
    </div>
</div>

