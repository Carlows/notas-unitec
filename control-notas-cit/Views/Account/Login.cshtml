<script type="text/javascript">
    particlesJS('particulas', {
        particles: {
            color: '#fff',
            shape: 'circle',
            opacity: 1,
            size: 2.5,
            size_random: true,
            nb: 80,
            line_linked: {
                enable_auto: true,
                distance: 250,
                color: '#fff',
                opacity: 0.5,
                width: 1,
                condensed_mode: {
                    enable: false,
                    rotateX: 600,
                    rotateY: 600
                }
            },
            anim: {
                enable: true,
                speed: 3
            }
        },
        interactivity: {
            enable: true,
            mouse: {
                distance: 200
            },
            mode: 'grab'
        },
        retina_detect: true
    });

    $(document).ready(function () {
        var colors = ["#088da5", "#dd2626", "#404040", "#ff6912", "#3b5998", "#51ba1c"];
        var rand = Math.floor(Math.random() * colors.length);                
        $('body').css("background-color", colors[rand]);
        var styles = {
            backgroundColor: colors[rand],
            borderColor: colors[rand]
        };
        $('.btncolor').css(styles);
    });
</script>